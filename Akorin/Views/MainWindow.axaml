<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Akorin.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ScottPlot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
		Width="800" Height="400"
        x:Class="Akorin.Views.MainWindow"
        Icon="/Assets/mic.ico"
        Title="Akorin">
	<Window.KeyBindings>
		<KeyBinding Gesture="R" Command="{Binding Record}"/>
		<KeyBinding Gesture="Space" Command="{Binding Play}"/>
	</Window.KeyBindings>

	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<!-- 0.1.0 temporarily disabled -->
				<MenuItem Header="_New project" IsEnabled="False"/>
				<MenuItem Header="_Open project" IsEnabled="False"/>
				<MenuItem Header="_Exit" Command="{Binding Exit}" />
			</MenuItem>
			
			<!-- 0.1.0 temporarily disabled-->
			<MenuItem Header="_Settings" IsEnabled="False">
				<MenuItem Header="_List and folder" Command="{Binding OpenSettings}" CommandParameter="files"/>
				<MenuItem Header="_Audio" Command="{Binding OpenSettings}" CommandParameter="audio"/>
				<MenuItem Header="_Display" Command="{Binding OpenSettings}" CommandParameter="display"/>
			</MenuItem>
		</Menu>

		<StackPanel DockPanel.Dock="Top" Margin="5">
			<TextBlock Text="{Binding SelectedLine.Text}" FontSize="{Binding FontSize}"/>
			<TextBox Watermark="no note available" IsReadOnly="True" Text="{Binding SelectedLineNote}"/>
		</StackPanel>

		<TextBlock DockPanel.Dock="Bottom" Margin="5" Text="{Binding RecordPlayStatus}"/>

		<ListBox DockPanel.Dock="Left" Width="100" SelectionMode="Single,AlwaysSelected"
				 Items="{Binding RecList}" SelectedItem="{Binding SelectedLine}">
		</ListBox>
		
		<StackPanel>
			<!-- 0.1.0 placeholders -->
			<TextBlock Margin="20" Text="{Binding FileStatus}"/>
			
			<!-- 0.1.1 Waveform display -->
			<ScottPlot:AvaPlot Name="Waveform"/>
			<!-- xavier -->
			
			<!-- 0.1.2 Spectrogram display -->
		</StackPanel>
	</DockPanel>
</Window>